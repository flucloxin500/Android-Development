<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ChemistryActivity"
    android:orientation="vertical"
    android:background="#282b30"
    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:id="@+id/lchef"
            >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                >

                <TextView
                    android:id="@+id/textView1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10sp"
                    android:layout_marginTop="20sp"
                    android:layout_marginBottom="30sp"
                    android:text="Chemistry 1st Paper"
                    android:textColor="#ff0007"
                    android:textSize="30sp"
                    android:textStyle="bold"

                    />

                <com.airbnb.lottie.LottieAnimationView
                    android:id="@+id/animationView"
                    android:layout_width="70dp"
                    android:layout_height="80dp"
                    app:lottie_rawRes="@raw/chemistry"
                    app:lottie_autoPlay="true"
                    app:lottie_loop="true"/>

            </LinearLayout>



            <Button
                android:id="@+id/button1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Chapter 1: safe use of labratory\n (ল্যাবরেটরির নিরাপদ ব্যবহার)"
                android:background="@drawable/shape2"
                android:layout_marginBottom="8sp"
                />

            <Button
                android:id="@+id/button2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Chapter 2:Qualitative chemistry\n (গুণগত রসায়ন)"
                android:background="@drawable/shape2"
                android:layout_marginBottom="8sp"
                />

            <Button
                android:id="@+id/button3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Chapter 3:Periodic Properties and bonding in elements\n (মৌলের পর্যায়বৃত্ত ধর্ম ও রাসায়নিক বন্ধন)"
                android:background="@drawable/shape2"
                android:layout_marginBottom="8sp"/>

            <Button
                android:id="@+id/button4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Chapter 4:chemical change\n (রাসায়নিক পরিবর্তন)"
                android:background="@drawable/shape2"
                android:layout_marginBottom="8sp"/>

            <Button
                android:id="@+id/button5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Chapter 5:vocational chemistry\n (কর্মমূখী রসায়ন)"
                android:background="@drawable/shape2"
                android:layout_marginBottom="8sp"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                >

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10sp"
                    android:layout_marginTop="20sp"
                    android:layout_marginBottom="30sp"
                    android:text="Chemistry 2nd Paper"
                    android:textColor="#ff0007"
                    android:textSize="30sp"
                    android:textStyle="bold"

                    />
                <com.airbnb.lottie.LottieAnimationView
                    android:id="@+id/animationView2"
                    android:layout_width="70dp"
                    android:layout_height="80dp"
                    app:lottie_rawRes="@raw/chemistry"
                    app:lottie_autoPlay="true"
                    app:lottie_loop="true"/>

            </LinearLayout>

            <Button
                android:id="@+id/button11"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Chapter 1: Thermodynamics\n (পরিবেশ রসায়ন)"
                android:background="@drawable/shape2"
                android:layout_marginBottom="8sp"/>

            <Button
                android:id="@+id/button12"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Chapter 2:electrostatics\n (জৈব রসায়ন)"
                android:background="@drawable/shape2"
                android:layout_marginBottom="8sp"/>

            <Button
                android:id="@+id/button13"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Chapter 3:current electricity\n(পরিমাণগত রসায়ন)"
                android:background="@drawable/shape2"
                android:layout_marginBottom="8sp"/>

            <Button
                android:id="@+id/button14"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Chapter 4:magnetic effects of current and magnetism\n (তড়িৎ রসায়ন)"
                android:background="@drawable/shape2"
                android:layout_marginBottom="8sp"/>

            <Button
                android:id="@+id/button15"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Chapter 5:electromagnetic induction \nand alternating current\n (অর্থনৈতিক রসায়ন)"
                android:background="@drawable/shape2"
                android:layout_marginBottom="8sp"/>

        </LinearLayout>
    </ScrollView>
</LinearLayout>
