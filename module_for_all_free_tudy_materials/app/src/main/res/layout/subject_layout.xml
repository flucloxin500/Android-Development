<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SubjectActivity"
    android:orientation="vertical"
    android:background="#282b30"
    android:paddingLeft="8sp"

    >


            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Subjects"
                android:gravity="center"
                android:layout_marginTop="20sp"
                android:textSize="40sp"
                android:textColor="#5b39c6"
                android:textStyle="bold"
                android:layout_marginBottom="30sp"

                />

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >


            <LinearLayout

                android:id="@+id/lphy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20sp"
                android:background="@drawable/shape"
                android:backgroundTint="#ffffff"
                android:orientation="horizontal">


                <ImageView
                    android:id="@+id/iphy"
                    android:layout_width="160dp"
                    android:layout_height="182dp"
                    android:layout_marginLeft="10sp"
                    android:layout_marginTop="20sp"
                    android:layout_marginBottom="3sp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/physics1" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">


                    <TextView
                        android:id="@+id/tpclass"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20sp"
                        android:layout_marginTop="20sp"
                        android:layout_marginRight="10sp"
                        android:text="Physics 1st paper\nPhysics 2nd paper"
                        android:textColor="#36393e"
                        android:textSize="18sp"
                        android:textStyle="bold"

                        />

                    <TextView
                        android:id="@+id/tpdet"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="20sp"
                        android:layout_marginTop="10sp"
                        android:text="Full syllabus covered\nX Chapters\nX Videos\n"
                        android:textColor="#36393e"
                        android:textSize="18sp"
                        android:textStyle="normal" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20sp"
                        android:text="Duration X hours"
                        android:textColor="#000000"
                        android:textSize="12sp"
                        android:textStyle="italic"

                        />


                </LinearLayout>


            </LinearLayout>

            <LinearLayout

                android:id="@+id/lche"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/shape"
                android:backgroundTint="#ffffff"
                android:layout_marginTop="20sp"
                >


                <ImageView
                    android:id="@+id/iche"
                    android:layout_width="160dp"
                    android:layout_height="180dp"
                    android:layout_marginLeft="10sp"
                    android:layout_marginTop="20sp"
                    android:layout_marginBottom="3sp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/che1"

                    />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >


                    <TextView
                        android:id="@+id/tcheclass"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20sp"
                        android:layout_marginTop="20sp"
                        android:text="Chemistry 1st paper\nChemistry 2nd paper"
                        android:textColor="#36393e"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:layout_marginRight="10sp"

                        />

                    <TextView
                        android:id="@+id/tchecdet"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Full syllabus covered\nX Chapters\nX Videos\n"
                        android:textStyle="normal"
                        android:layout_marginTop="10sp"
                        android:layout_marginLeft="20sp"
                        android:textSize="18sp"
                        android:textColor="#36393e"
                        />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Duration X hours"
                        android:textColor="#000000"
                        android:textSize="12sp"
                        android:textStyle="italic"
                        android:layout_marginLeft="20sp"

                        />


                </LinearLayout>


            </LinearLayout>

            <LinearLayout

                android:id="@+id/lmat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/shape"
                android:backgroundTint="#ffffff"
                android:layout_marginTop="20sp"
                >


                <ImageView
                    android:id="@+id/imat"
                    android:layout_width="160dp"
                    android:layout_height="180dp"
                    android:layout_marginLeft="10sp"
                    android:layout_marginTop="20sp"
                    android:layout_marginBottom="3sp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/math1"

                    />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >


                    <TextView
                        android:id="@+id/tmatclass"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20sp"
                        android:layout_marginTop="20sp"
                        android:text="Math 1st paper\nMath 2nd paper"
                        android:textColor="#36393e"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:layout_marginRight="10sp"

                        />

                    <TextView
                        android:id="@+id/tmatcdet"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Full syllabus covered\nX Chapters\nX Videos\n"
                        android:textStyle="normal"
                        android:layout_marginTop="10sp"
                        android:layout_marginLeft="20sp"
                        android:textSize="18sp"
                        android:textColor="#36393e"
                        />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Duration X hours"
                        android:textColor="#000000"
                        android:textSize="12sp"
                        android:textStyle="italic"
                        android:layout_marginLeft="20sp"

                        />


                </LinearLayout>
            </LinearLayout>

            <LinearLayout

                android:id="@+id/lbio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/shape"
                android:backgroundTint="#ffffff"
                android:layout_marginTop="20sp"
                >


                <ImageView
                    android:id="@+id/ibio"
                    android:layout_width="160dp"
                    android:layout_height="180dp"
                    android:layout_marginLeft="10sp"
                    android:layout_marginTop="20sp"
                    android:layout_marginBottom="3sp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/bio1"

                    />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >


                    <TextView
                        android:id="@+id/tbioclass"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20sp"
                        android:layout_marginTop="20sp"
                        android:text="Botany\nZoology"
                        android:textColor="#36393e"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:layout_marginRight="10sp"

                        />

                    <TextView
                        android:id="@+id/tbiocdet"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Full syllabus covered\nX Chapters\nX Videos\n"
                        android:textStyle="normal"
                        android:layout_marginTop="10sp"
                        android:layout_marginLeft="20sp"
                        android:textSize="18sp"
                        android:textColor="#36393e"
                        />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Duration X hours"
                        android:textColor="#000000"
                        android:textSize="12sp"
                        android:textStyle="italic"
                        android:layout_marginLeft="20sp"

                        />


                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

    </ScrollView>

</LinearLayout>
