<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"


    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"


        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bc"
            android:orientation="vertical"


            >


            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:gravity="center"
                android:text="Shoilpik Hill Park\n"
                android:textColor="#000000"
                android:textSize="40sp"
                android:textStyle="bold"


                />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10sp"
                android:text="Shoilpik Hill Park is an apartment which located in CHATTOGRAM. Basically it's an apartment of Shoilpik Group of limited. Shoilpik is a well-known clothing brand in Bangladesh. "
                android:textColor="#000000"
                android:textSize="20sp"


                />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25sp"
                android:layout_marginBottom="15sp"
                android:gravity="center"
                android:text="Map Location"
                android:textColor="#000000"
                android:textSize="40sp"

                />

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:scaleType="centerCrop"
                android:src="@drawable/bl_location"

                />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10sp"
                android:layout_marginTop="15sp"
                android:text="Let's look into apartment:"
                android:textColor="#000000"
                android:textSize="30sp"


                />

            <Button
                android:id="@+id/bParking"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="30sp"
                android:text="Parking"
                android:textSize="20sp"
                android:backgroundTint="#36393e"

                />

            <Button
                android:id="@+id/bMosque"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="30sp"
                android:text="Mosque"
                android:textSize="20sp"
                android:backgroundTint="#36393e"

                />

            <Button
                android:id="@+id/bBackyard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="30sp"
                android:text="Backyard"
                android:textSize="20sp"
                android:backgroundTint="#36393e"

                />

            <Button
                android:id="@+id/bLift"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="30sp"
                android:text="Lift"
                android:textSize="20sp"
                android:backgroundTint="#36393e"

                />

            <Button
                android:id="@+id/bFloor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="30sp"
                android:text="Floor"
                android:textSize="20sp"
                android:backgroundTint="#36393e"


                />

            <Button
                android:id="@+id/bRooftop"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="30sp"
                android:text="Rooftop"
                android:textSize="20sp"
                android:backgroundTint="#36393e"


                />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="80sp"
                android:gravity="center"
                android:text="Managed By FLUCLOXIN"
                android:textColor="#282b30"
                android:textSize="25sp"
                android:textStyle="bold"


                />


        </LinearLayout>


    </ScrollView>


</LinearLayout>